{
    "manifest_version": 2,
    "name": "Ragatouille",
    "description": "Ragatouille local server connection",
    "version": "1.0",
    "author": "Iaroslav Rykhalskyi",
    "browser_specific_settings": {
        "gecko": {
            "id": "connector@ragatouille.com",
            "strict_min_version": "128.0"
        }
    },
    "browser_action": {
        "default_popup": "mainPopup/popup.html",
        "default_title": "Ragatouille",
        "default_icon": "images/ragatouille_32.png"
    },
    "icons": {
        "64": "images/ragatouille_64.png",
        "32": "images/ragatouille_32.png",
        "16": "images/ragatouille_16.png"
    },
    "background": {
        "page": "background/background.html"
    },
    "permissions": [
        "messagesRead",
        "accountsRead",
        "http://localhost/*",
        "http://127.0.0.1/*"
    ]
}
